<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background1"
    tools:context=".MenuEmployeeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! Select an action"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/emplText"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addProductMenuEmplBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emplText"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:layout_marginBottom="15dp"
        android:text="Add Product"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteProductMenuEmplBtn"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addProductMenuEmplBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:text="Delete Product"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateProductMenuEmplBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/deleteProductMenuEmplBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:text="Update Product"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewProductMenuEmplBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateProductMenuEmplBtn"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:text="View Products"
        />
    <ImageView

        android:layout_below="@id/viewProductMenuEmplBtn"
        android:layout_width = "100dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>